<div class="bg-white bg-opacity-1 p-5 border rounded row">
    <div class="col-md-6">
        <h1 class="h1 display-5">NodeJS Ecommerce Website</h1>
        <span class="text-success fw-bold fs-1">&mdash;</span>
        <p class="lead">
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Nulla laborum fugiat quam modi hic harum
            non autem, nobis nisi suscipit. Iste tenetur ipsa illum dignissimos facere sunt voluptates doloremque magni?
        </p>
    </div>
    <div class="col-md-6">
        <img src="/images/hand-holding-maize.jpg" alt="" class="img-fluid rounded">
    </div>
</div>
<div class="py-5 row justify-content-center gap-3 align-items-center">
    <div class="col-12">
        <h2 class="h2 display-6 fs-4">Categories</h2>
    </div>
    <div class="col-12">
        <ul class="list-group list-group-horizontal-md">
            <% categories.forEach(category=> { %>
                <a href="/categories/<%= category.id %>"
                    class="p-3 list-group-item list-group-item-action d-flex justify-content-start align-items-center gap-3">
                    <% if (category.imageUrl) { %>
                        <img src="/images/categories/<%= category.imageUrl %>" alt="" class="img-fluid img-thumbnail"
                            width="100">
                        <% } else { %>
                            <div class="">
                                <img src="/images/placeholder-image.svg" alt="" class="img-fluid img-thumbnail"
                                    width="100">
                            </div>
                            <% } %>
                                <span class="text-success fw-bold fs-1 vr"></span>
                                <span class="mt-2 fs-5 fw-semibold">
                                    <%= category.name %>
                                </span>
                </a>
                <% }) %>
        </ul>
    </div>
</div>
<div class="row justify-content-start">
    <% categories.forEach(category=> { %>
        <% if (category.products.length > 0) { %>
            <div class="col-xs-12 my-3">
                <h2 class="h2 display-6 fs-4">
                    <%= category.name %>
                </h2>
            </div>
            <% category.products.slice(0,3).forEach(product=> { %>
                <div class="col-md-4 py-3 p-md-auto">
                    <div class="card">
                        <img src="/images/products/<%= product.imageUrl %>" alt="" class="card-img-top" height="250"
                            style="object-fit: cover;">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <h2 class="h2 fs-4">
                                <%= product.name %>
                            </h2>
                            <span class="text-success fw-bold fs-1">&mdash;</span>
                            <div>
                                <p class="text-muted">
                                    <%= product.shortDescription %>
                                </p>
                                <p class="lead text-black">
                                    UGX <%= product.unitPrice %>
                                </p>
                                <a href="/products/<%= product.id %>"
                                    class="card-action stretched-link btn btn-sm btn-outline-success text-uppercase">See
                                    details</a>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
                    <% } %>
                        <% }) %>
</div>